<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="io.webguru.ticketing.FieldAgent.ViewEditFieldTicket">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        tools:context="io.webguru.ticketing.FieldAgent.ViewEditFieldTicket">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <ViewFlipper
                android:id="@+id/viewFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/viewData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        tools:context="io.webguru.ticketing.FieldAgent.AddTicketRequest">

                        <TextView
                            android:id="@+id/labelProblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="41dp"
                            android:text="Problem"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/valueProblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/labelProblem"
                            android:layout_marginStart="27dp"
                            android:layout_toEndOf="@+id/labelProblem"
                            android:maxLines="3"
                            android:text="Please explain the situation in brief" />

                        <TextView
                            android:id="@+id/labelPriority"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/labelProblem"
                            android:layout_below="@+id/valueProblem"
                            android:layout_marginTop="25dp"
                            android:text="Priority"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/valuePriorityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/valueProblem"
                            android:layout_alignTop="@+id/labelPriority"
                            android:layout_below="@+id/valueProblem"
                            android:layout_marginStart="17dp"
                            android:text="LOW"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/valueFactory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/valuePriorityValue"
                            android:layout_alignTop="@+id/labelFactory"
                            android:layout_below="@+id/valuePriorityValue"
                            android:text="Factory location" />

                        <TextView
                            android:id="@+id/labelFactory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/labelProblem"
                            android:layout_below="@+id/labelPriority"
                            android:layout_marginTop="25dp"
                            android:text="Factory"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/labelPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/labelProblem"
                            android:layout_below="@+id/valueFactory"
                            android:layout_marginTop="25dp"
                            android:text="Photo"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/valuePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/labelPhoto"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:clickable="true"
                            android:visibility="gone"
                            app:srcCompat="@drawable/big_logo" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/editData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/activity_add_ticket_request"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        tools:context="io.webguru.ticketing.FieldAgent.AddTicketRequest">

                        <TextView
                            android:id="@+id/textViewProblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="41dp"
                            android:text="Problem"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextProblem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/textViewProblem"
                            android:layout_marginStart="27dp"
                            android:layout_toEndOf="@+id/textViewProblem"
                            android:ems="10"
                            android:hint="Please explain the situation in brief"
                            android:inputType="textMultiLine" />

                        <TextView
                            android:id="@+id/textViewPriority"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textViewProblem"
                            android:layout_below="@+id/editTextProblem"
                            android:layout_marginTop="25dp"
                            android:text="Priority"
                            android:textStyle="bold" />

                        <SeekBar
                            android:id="@+id/seekBarPriority"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/editTextProblem"
                            android:layout_alignTop="@+id/textViewPriority"
                            android:max="100"
                            android:progress="0" />

                        <TextView
                            android:id="@+id/textViewPriorityValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/seekBarPriority"
                            android:layout_below="@+id/seekBarPriority"
                            android:layout_marginStart="17dp"
                            android:text="LOW"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnerFactory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/seekBarPriority"
                            android:layout_alignTop="@+id/textViewFactory"
                            android:layout_below="@+id/textViewPriorityValue"
                            android:drawSelectorOnTop="true"
                            android:entries="@array/factory_list" />

                        <TextView
                            android:id="@+id/textViewFactory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textViewPriority"
                            android:layout_below="@+id/seekBarPriority"
                            android:layout_marginTop="25dp"
                            android:text="Factory"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textViewFactory"
                            android:layout_below="@+id/spinnerFactory"
                            android:layout_marginTop="25dp"
                            android:text="Photo"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/buttonPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/editTextProblem"
                            android:layout_alignTop="@+id/textViewPhoto"
                            android:text="Click to take Photo"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageViewPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/buttonPhoto"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:clickable="true"
                            android:visibility="gone"
                            app:srcCompat="@drawable/big_logo" />

                        <Button
                            android:id="@+id/buttonRequestTicket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/buttonPhoto"
                            android:layout_below="@+id/imageViewPhoto"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50dp"
                            android:text="Update Ticket"
                            android:textStyle="bold" />


                    </RelativeLayout>
                </LinearLayout>
            </ViewFlipper>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
